%section.content
  .container-fluid
    .row
      .col-md-12
        .card.card-primary
          .card-header
            %h3.card-title Basic Details
          = form_with model: [:company, branch], local: true, html: { multipart: true }, class: 'form' do |f|
            .card-body
              .row
                %div{ class: "col-md-6 form-group #{ error?(branch.errors, :name) }" }
                  = f.label :name do
                    Name
                  = f.text_field :name, class: 'form-control', autocomplete: 'off', placeholder: 'Branch name'
                  = print_error(branch.errors, :name)
                %div{ class: "col-md-6 form-group #{ error?(branch.errors, :email) }" }
                  = f.label :email do
                    Email
                    %span
                      %i.fa.fa-question-circle-o{ 'data-toggle': 'tooltip', title: 'Email' }
                  = f.email_field :email, class: 'form-control', autocomplete: 'off', placeholder: 'Email'
                  = print_error(branch.errors, :email)
              .row
                %div{ class: "col-md-6 form-group #{ error?(branch.errors, :phone) }" }
                  = f.label :phone do
                    Phone
                    %span
                      %i.fa.fa-question-circle-o{ 'data-toggle': 'tooltip', title: 'Phone Number' }
                  = f.text_field :phone, class: 'form-control', autocomplete: 'off', placeholder: 'Phone Number'
                  = print_error(branch.errors, :phone)
                %div{ class: "col-md-6 form-group #{ error?(branch.errors, :address) }" }
                  = f.label :code do
                    Code
                    %span
                      %i.fa.fa-question-circle-o{ 'data-toggle': 'tooltip', title: 'Code' }
                  = f.text_field :code, class: 'form-control', autocomplete: 'off', placeholder: 'Code'
                  = print_error(branch.errors, :code)
              .row
                %div{ class: "col-md-12 form-group #{ error?(branch.errors, :address) }" }
                  = f.label :address do
                    Address
                    %span
                      %i.fa.fa-question-circle-o{ 'data-toggle': 'tooltip', title: 'Address' }
                  = f.text_field :address, class: 'form-control', autocomplete: 'off', placeholder: 'Address'
                  = print_error(branch.errors, :address)
              .row
                .col-12.mb-2
                  %a.btn.btn-secondary{href: company_branches_path} Cancel
                  = f.submit "Submit", class: "btn btn-primary float-right"
